<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div id="item_id_<%=item.id%>"class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
      <% unless item.active %>
        <%#= form_for item do |f| %>
          <%#= f.hidden_field :active, value: true %>
          <%#= f.submit "Activate!" %>
        <%# end %>
      <% end %>
      <%= button_to "Activate!", item_path(item.id, item: { active: :true}), method: :patch  %>
    </div>
  <% end %>
</div>
