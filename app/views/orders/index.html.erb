<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @orders.count %> Orders</h1>
    </div>
  </div>
  <div class="row"></div>
  <% Order.statuses.each do |status| %>
  <div class="col-sm-12">
    <h1><%= status + ' orders' %></h1>
    <% @orders[status].each do |order| %>
        <h2>Order <%= order.id %></h2>
        <h5>Client: <%= order.user.name %></h5>
        <h5>Order Items</h5>
        <% order.items.each_with_index do |item, index| %>
          <p>
            <%= "#{index + 1}. #{item.name}" %>
          </p>
        <% end %>
        <%= "Order Status: #{order.status}" %>
        <!-- <h5>Change Order Status: -->
          <%#= select("Order", "status", Order.statuses) %>
        <!-- </h5> -->
      </div>
    <% end %>
  <% end %>
</div>
